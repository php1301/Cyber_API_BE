{
  "name": "cyber-api-be",
  "version": "0.0.0",
  "author": "php1301",
  "scripts": {
    "start": "npm run nodemon",
    "dev": "cross-env NODE_ENV=development node ./server.js",
    "nodemon": "nodemon --exec npm run dev",
    "lint": "eslint ./api/. ./config/. ./test/.",
    "prepush": "npm test",
    "pretest": "npm run lint",
    "production": "cross-env NODE_ENV=production node ./server.js",
    "test": " cross-env NODE_ENV=testing jest --coverage",
    "test-ci": "jest --coverage --forceExit"
  },
  "_moduleAliases": {
    "@root": ".",
    "@configs": "./configs",
    "@apis": "./apis"
  },
  "jest": {
    "globals": {
      "__DEV__": true
    },
    "testEnvironment": "node",
    "testPathIgnorePatterns": [
      "/node_modules/"
    ]
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "bcrypt-nodejs": "^0.0.3",
    "body-parser": "^1.18.2",
    "core-js": "^2.6.9",
    "cors": "^2.8.4",
    "dotenv": "^8.2.0",
    "express": "^4.16.3",
    "express-routes-mapper": "^1.0.2",
    "glob": "^7.1.6",
    "helmet": "^3.12.0",
    "jsonwebtoken": "^8.2.1",
    "module-alias": "^2.2.2",
    "mysql2": "^2.2.5",
    "sequelize": "^6.0.0",
    "sqlite3": "^4.0.0",
    "swagger-ui-express": "^4.1.4",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "cross-env": "^5.1.4",
    "eslint": "^4.19.1",
    "eslint-config-airbnb-base": "^12.1.0",
    "eslint-plugin-import": "^2.11.0",
    "husky": "^0.14.3",
    "jest": "^24.8.0",
    "nodemon": "^1.17.3",
    "shx": "^0.2.2",
    "supertest": "^3.0.0"
  }
}
